@page "/candidates"
@inherits Base.CandidatesBase

<div class="row my-5">
    <div class="col-lg-6 col-xl-4 offset-lg-3 offset-xl-4">
        <RadzenCard class="m-3">
            <h3 class="h5">Candidate</h3>
            <div class="d-flex flex-row">
                <RadzenImage Path="@Candidate.profilePicture" Class="rounded-circle float-left mr-3" Style="width: 100px; height: 100px;" />
                <div>
                    <div>Name</div>
                    <b>@Candidate.fullName</b>
                    <div class="mt-3">Email</div>
                    <b>@Candidate.email</b>
                </div>
            </div>
        </RadzenCard>
        <RadzenCard class="m-3">
            <h3 class="h5">Information</h3>
            <div class="row">
                <div class="col-md-4">
                    <div>Favorite music</div>
                    <b>@Candidate.favoriteMusicGenre</b>
                </div>
                <div class="col-md-8">
                    <div>Can swim?</div>
                    <b>@(Candidate.canSwim ? "Yes" : "No")</b>
                </div>
            </div>
        </RadzenCard>
        <RadzenButton Click=@(()=>Accept_OnClick(Candidate.Id)) Text="Accept" Icon="check_circle" ButtonStyle="ButtonStyle.Success" />
        <RadzenButton Click=@(()=>Reject_OnClick(Candidate.Id)) Text="Reject" Icon="report" ButtonStyle="ButtonStyle.Danger" />
    </div>
</div>
